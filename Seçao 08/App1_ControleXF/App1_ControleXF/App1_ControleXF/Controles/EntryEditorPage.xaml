<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_ControleXF.Controles.EntryEditorPage">
    <ContentPage.Content>
        <StackLayout>

            <Entry
                x:Name="TxtIdade"
                Text=""
                TextColor="Red"
                Placeholder="Digite Aqui"
                PlaceholderColor="AntiqueWhite"
                IsPassword="False"
                
                Keyboard="Numeric"
                
                BackgroundColor="#CCCCCC"
                />

            <Label x:Name="Lbl_Duplicado" />
            
            
            <Editor x:Name="TxtComentario" HeightRequest="200" />
            <Label x:Name="LblQuantiCaracteres" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>