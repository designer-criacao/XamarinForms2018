<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_ControleXF.Controles.SwitchPage">
    <ContentPage.Content>
        <StackLayout>
            <!--Switch serve para deixar um botão para o user poder escolher se Habilita ou não algo-->
            <Switch 
                IsToggled="True"
                
                Toggled="ActionTrocou"
                />

            <Label x:Name="Resultado" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>